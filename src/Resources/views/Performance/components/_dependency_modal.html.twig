{# Modal para mostrar información sobre dependencias faltantes #}
{# Bootstrap version #}
<div class="modal fade" id="dependencyModal" tabindex="-1" aria-labelledby="dependencyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dependencyModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                    Dependencia Requerida
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning" role="alert">
                    <h6 class="alert-heading">Funcionalidad no disponible</h6>
                    <p class="mb-2">Para usar esta funcionalidad, necesitas instalar la siguiente dependencia:</p>
                    <div id="dependencyInfo">
                        {# Se llenará dinámicamente con JavaScript #}
                    </div>
                </div>
                <div class="mt-3">
                    <h6>Instalación:</h6>
                    <pre class="bg-light p-3 rounded"><code id="installCommand"></code></pre>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

{# Tailwind version (hidden by default, shown when template is tailwind) #}
<div id="dependencyModalTailwind" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="dependencyModalTailwindLabel" aria-hidden="true">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="document.getElementById('dependencyModalTailwind').classList.add('hidden')"></div>
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100 sm:mx-0 sm:h-10 sm:w-10">
                        <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="dependencyModalTailwindLabel">
                            Dependencia Requerida
                        </h3>
                        <div class="mt-2">
                            <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
                                <h4 class="text-sm font-medium text-yellow-800 mb-2">Funcionalidad no disponible</h4>
                                <p class="text-sm text-yellow-700 mb-2">Para usar esta funcionalidad, necesitas instalar la siguiente dependencia:</p>
                                <div id="dependencyInfoTailwind">
                                    {# Se llenará dinámicamente con JavaScript #}
                                </div>
                            </div>
                            <div class="mt-4">
                                <h4 class="text-sm font-medium text-gray-900 mb-2">Instalación:</h4>
                                <pre class="bg-gray-100 p-3 rounded text-sm overflow-x-auto"><code id="installCommandTailwind"></code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-gray-600 text-base font-medium text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:ml-3 sm:w-auto sm:text-sm" onclick="document.getElementById('dependencyModalTailwind').classList.add('hidden')">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    // Función para mostrar el modal con información de dependencia
    window.showDependencyModal = function(dependencyKey, missingDeps) {
        const dep = missingDeps[dependencyKey];
        if (!dep) return;
        
        // Detectar si estamos usando Bootstrap o Tailwind
        const isBootstrap = typeof bootstrap !== 'undefined' && bootstrap.Modal;
        
        if (isBootstrap) {
            // Bootstrap version
            const modal = new bootstrap.Modal(document.getElementById('dependencyModal'));
            const dependencyInfo = document.getElementById('dependencyInfo');
            const installCommand = document.getElementById('installCommand');
            
            dependencyInfo.innerHTML = `
                <p class="mb-1"><strong>Paquete:</strong> <code>${dep.package}</code></p>
                <p class="mb-1"><strong>Funcionalidad:</strong> ${dep.feature}</p>
                <p class="mb-0"><strong>Descripción:</strong> ${dep.message}</p>
            `;
            
            installCommand.textContent = dep.install_command;
            
            modal.show();
        } else {
            // Tailwind version
            const modal = document.getElementById('dependencyModalTailwind');
            const dependencyInfo = document.getElementById('dependencyInfoTailwind');
            const installCommand = document.getElementById('installCommandTailwind');
            
            dependencyInfo.innerHTML = `
                <p class="mb-1 text-sm"><strong class="text-yellow-800">Paquete:</strong> <code class="text-yellow-900">${dep.package}</code></p>
                <p class="mb-1 text-sm"><strong class="text-yellow-800">Funcionalidad:</strong> <span class="text-yellow-700">${dep.feature}</span></p>
                <p class="mb-0 text-sm"><strong class="text-yellow-800">Descripción:</strong> <span class="text-yellow-700">${dep.message}</span></p>
            `;
            
            installCommand.textContent = dep.install_command;
            
            modal.classList.remove('hidden');
        }
    };
})();
</script>
