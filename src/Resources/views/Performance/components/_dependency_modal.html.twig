{# Modal para mostrar información sobre dependencias faltantes #}
{# template variable: 'bootstrap' or 'tailwind' (defaults to 'bootstrap' if not provided) #}
{% set template = template|default('bootstrap') %}

{# Bootstrap version - siempre incluido #}
<div class="modal fade" id="dependencyModal" tabindex="-1" aria-labelledby="dependencyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dependencyModalLabel">
                    {{ ux_icon('bi:info-circle', {style: 'width: 20px; height: 20px; display: inline-block; vertical-align: middle; margin-right: 8px;'}) }}
                    Dependencia Opcional
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info" role="alert">
                    <h6 class="alert-heading">Funcionalidad mejorada disponible</h6>
                    <p class="mb-2">Esta funcionalidad está disponible con un modo de respaldo, pero puedes mejorar el rendimiento instalando la siguiente dependencia opcional:</p>
                    <div id="dependencyInfo">
                        {# Se llenará dinámicamente con JavaScript #}
                    </div>
                </div>
                <div class="mt-3">
                    <h6 class="mb-2">Instalación:</h6>
                    <pre class="bg-light p-3 rounded border"><code id="installCommand" class="text-dark"></code></pre>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

{# Tailwind version - solo incluido si template es tailwind #}
{% if template == 'tailwind' %}
<div id="dependencyModalTailwind" class="hidden fixed inset-0 z-50 overflow-y-auto" aria-labelledby="dependencyModalTailwindLabel" aria-hidden="true" role="dialog" aria-modal="true">
    <div class="flex min-h-screen items-center justify-center p-4 sm:p-6">
        {# Backdrop #}
        <div id="dependencyModalTailwindBackdrop" class="fixed inset-0 z-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="window.hideDependencyModalTailwind()"></div>
        
        {# Modal panel #}
        <div class="relative z-10 w-full max-h-[90vh] overflow-y-auto bg-white rounded-lg text-left shadow-xl sm:max-w-lg">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 sm:mx-0 sm:h-10 sm:w-10">
                        {{ ux_icon('bi:info-circle', {class: 'h-6 w-6 text-blue-600'}) }}
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="dependencyModalTailwindLabel">
                            Dependencia Opcional
                        </h3>
                        <div class="mt-2">
                            <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                                <h4 class="text-sm font-medium text-blue-800 mb-2">Funcionalidad mejorada disponible</h4>
                                <p class="text-sm text-blue-700 mb-3">Esta funcionalidad está disponible con un modo de respaldo, pero puedes mejorar el rendimiento instalando la siguiente dependencia opcional:</p>
                                <div id="dependencyInfoTailwind" class="space-y-2">
                                    {# Se llenará dinámicamente con JavaScript #}
                                </div>
                            </div>
                            <div class="mt-4">
                                <h4 class="text-sm font-medium text-gray-900 mb-2">Instalación:</h4>
                                <div class="bg-gray-100 border border-gray-200 rounded-md p-3 overflow-x-auto">
                                    <code id="installCommandTailwind" class="text-sm text-gray-800 font-mono whitespace-pre"></code>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-gray-600 text-base font-medium text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:ml-3 sm:w-auto sm:text-sm" onclick="window.hideDependencyModalTailwind()">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
{% endif %}

<script>
(function() {
    // Función para ocultar el modal de Tailwind
    window.hideDependencyModalTailwind = function() {
        const modal = document.getElementById('dependencyModalTailwind');
        if (modal) {
            modal.classList.add('hidden');
            // Prevenir scroll del body cuando se cierra
            document.body.style.overflow = '';
        }
    };

    // Función para mostrar el modal con información de dependencia
    window.showDependencyModal = function(dependencyKey, missingDeps) {
        if (!missingDeps || typeof missingDeps !== 'object') {
            console.warn('showDependencyModal: missingDeps is not valid', missingDeps);
            return;
        }
        
        const dep = missingDeps[dependencyKey];
        if (!dep) {
            console.warn('showDependencyModal: dependency not found', dependencyKey, missingDeps);
            return;
        }
        
        // Detectar si estamos usando Bootstrap o Tailwind
        // Verificar si Bootstrap está disponible Y si el modal de Bootstrap existe
        const bootstrapModal = document.getElementById('dependencyModal');
        const tailwindModal = document.getElementById('dependencyModalTailwind');
        
        // Priorizar Bootstrap si está disponible y el modal existe
        const isBootstrap = typeof bootstrap !== 'undefined' && bootstrap.Modal && bootstrapModal;
        const isTailwind = tailwindModal && !isBootstrap;
        
        if (isBootstrap) {
            // Bootstrap version
            const modal = new bootstrap.Modal(bootstrapModal);
            const dependencyInfo = document.getElementById('dependencyInfo');
            const installCommand = document.getElementById('installCommand');
            
            if (dependencyInfo) {
                dependencyInfo.innerHTML = `
                    <p class="mb-2"><strong>Paquete:</strong> <code class="bg-white px-2 py-1 rounded border">${escapeHtml(dep.package || '')}</code></p>
                    <p class="mb-2"><strong>Funcionalidad:</strong> ${escapeHtml(dep.feature || '')}</p>
                    <p class="mb-0"><strong>Descripción:</strong> ${escapeHtml(dep.message || '')}</p>
                `;
            }
            
            if (installCommand) {
                installCommand.textContent = dep.install_command || '';
            }
            
            modal.show();
        } else if (isTailwind) {
            // Tailwind version (solo si Bootstrap no está disponible)
            const modal = document.getElementById('dependencyModalTailwind');
            const dependencyInfo = document.getElementById('dependencyInfoTailwind');
            const installCommand = document.getElementById('installCommandTailwind');
            
            if (!modal) {
                console.error('showDependencyModal: Tailwind modal not found');
                return;
            }
            
            if (dependencyInfo) {
                dependencyInfo.innerHTML = `
                    <p class="text-sm mb-2"><strong class="text-blue-800">Paquete:</strong> <code class="text-blue-900 bg-blue-100 px-2 py-1 rounded font-mono">${escapeHtml(dep.package || '')}</code></p>
                    <p class="text-sm mb-2"><strong class="text-blue-800">Funcionalidad:</strong> <span class="text-blue-700">${escapeHtml(dep.feature || '')}</span></p>
                    <p class="text-sm mb-0"><strong class="text-blue-800">Descripción:</strong> <span class="text-blue-700">${escapeHtml(dep.message || '')}</span></p>
                `;
            }
            
            if (installCommand) {
                installCommand.textContent = dep.install_command || '';
            }
            
            // Mostrar el modal
            modal.classList.remove('hidden');
            // Prevenir scroll del body cuando el modal está abierto
            document.body.style.overflow = 'hidden';
            
            // Cerrar con ESC
            const handleEscape = function(event) {
                if (event.key === 'Escape') {
                    window.hideDependencyModalTailwind();
                    document.removeEventListener('keydown', handleEscape);
                }
            };
            document.addEventListener('keydown', handleEscape);
        } else {
            console.warn('showDependencyModal: Neither Bootstrap nor Tailwind modal found. Bootstrap modal:', !!bootstrapModal, 'Tailwind modal:', !!tailwindModal);
        }
    };
    
    // Función helper para escapar HTML
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
})();
</script>
