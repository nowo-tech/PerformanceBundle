{# Filters Component (Tailwind) #}
{# This component can be overridden by creating: templates/bundles/NowoPerformanceBundle/Performance/components/_filters_tailwind.html.twig #}
<div class="bg-white shadow rounded-lg mb-8">
    <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">{{ 'filters.title'|trans({}, 'nowo_performance') }}</h3>
            <button type="button" class="text-sm text-indigo-600 hover:text-indigo-800 focus:outline-none" onclick="toggleAdvancedFilters()" data-show-text="{{ 'filters.show_advanced'|trans({}, 'nowo_performance') }}" data-hide-text="{{ 'filters.hide_advanced'|trans({}, 'nowo_performance') }}">
                <span id="advancedFiltersToggleText">{{ 'filters.show_advanced'|trans({}, 'nowo_performance') }}</span>
            </button>
        </div>
        {{ form_start(form, {'action': path('nowo_performance.index'), 'attr': {'class': 'space-y-4'}}) }}
            {# Basic Filters #}
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-5">
                <div>
                    {% if not form.env.isRendered %}
                        {{ form_label(form.env, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.env, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.env) }}
                    {% endif %}
                </div>
                <div>
                    {% if not form.route.isRendered %}
                        {{ form_label(form.route, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.route, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.route) }}
                    {% endif %}
                </div>
                <div>
                    {% if not form.sort.isRendered %}
                        {{ form_label(form.sort, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.sort, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.sort) }}
                    {% endif %}
                </div>
                <div>
                    {% if not form.order.isRendered %}
                        {{ form_label(form.order, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.order, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.order) }}
                    {% endif %}
                </div>
                <div>
                    {% if not form.limit.isRendered %}
                        {{ form_label(form.limit, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.limit, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.limit) }}
                    {% endif %}
                </div>
            </div>

            {# Advanced Filters (Collapsible) #}
            <div id="advancedFilters" class="hidden mt-6 pt-6 border-t border-gray-200">
                <div class="flex items-center mb-6">
                    <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                    </svg>
                    <h4 class="text-lg font-semibold text-gray-900">{{ 'filters.advanced_filters'|trans({}, 'nowo_performance') }}</h4>
                </div>
                
                {# Request Time Range #}
                <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="flex items-center mb-3">
                        <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h5 class="text-sm font-semibold text-blue-900">{{ 'filters.request_time_range'|trans({}, 'nowo_performance') }}</h5>
                    </div>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            {% if not form.min_request_time.isRendered %}
                                {{ form_label(form.min_request_time, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 text-sm">{{ 'filters.min'|trans({}, 'nowo_performance') }}</span>
                                    </div>
                                    {{ form_widget(form.min_request_time, {'attr': {'class': 'block w-full pl-12 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'placeholder': '0.0000'}}) }}
                                </div>
                                {{ form_errors(form.min_request_time) }}
                            {% endif %}
                        </div>
                        <div>
                            {% if not form.max_request_time.isRendered %}
                                {{ form_label(form.max_request_time, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 text-sm">{{ 'filters.max'|trans({}, 'nowo_performance') }}</span>
                                    </div>
                                    {{ form_widget(form.max_request_time, {'attr': {'class': 'block w-full pl-12 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'placeholder': '1.0000'}}) }}
                                </div>
                                {{ form_errors(form.max_request_time) }}
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Query Count Range #}
                <div class="mb-6 bg-cyan-50 border border-cyan-200 rounded-lg p-4">
                    <div class="flex items-center mb-3">
                        <svg class="w-4 h-4 text-cyan-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        <h5 class="text-sm font-semibold text-cyan-900">{{ 'filters.query_count_range'|trans({}, 'nowo_performance') }}</h5>
                    </div>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            {% if not form.min_query_count.isRendered %}
                                {{ form_label(form.min_query_count, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 text-sm">{{ 'filters.min'|trans({}, 'nowo_performance') }}</span>
                                    </div>
                                    {{ form_widget(form.min_query_count, {'attr': {'class': 'block w-full pl-12 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'placeholder': '0'}}) }}
                                </div>
                                {{ form_errors(form.min_query_count) }}
                            {% endif %}
                        </div>
                        <div>
                            {% if not form.max_query_count.isRendered %}
                                {{ form_label(form.max_query_count, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 text-sm">{{ 'filters.max'|trans({}, 'nowo_performance') }}</span>
                                    </div>
                                    {{ form_widget(form.max_query_count, {'attr': {'class': 'block w-full pl-12 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm', 'placeholder': '100'}}) }}
                                </div>
                                {{ form_errors(form.max_query_count) }}
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Date Range #}
                <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
                    <div class="flex items-center mb-3">
                        <svg class="w-4 h-4 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <h5 class="text-sm font-semibold text-green-900">{{ 'filters.date_range'|trans({}, 'nowo_performance') }}</h5>
                    </div>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            {% if not form.date_from.isRendered %}
                                {{ form_label(form.date_from, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                    {{ form_widget(form.date_from, {'attr': {'class': 'block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                </div>
                                {{ form_errors(form.date_from) }}
                            {% endif %}
                        </div>
                        <div>
                            {% if not form.date_to.isRendered %}
                                {{ form_label(form.date_to, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                    {{ form_widget(form.date_to, {'attr': {'class': 'block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                </div>
                                {{ form_errors(form.date_to) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex space-x-3">
                {% if not form.submit.isRendered %}
                    {{ form_widget(form.submit, {'attr': {'class': 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500'}}) }}
                {% endif %}
                <a href="{{ path('nowo_performance.index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Reset
                </a>
            </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>

<script>
function toggleAdvancedFilters() {
    const advancedFilters = document.getElementById('advancedFilters');
    const toggleButton = document.querySelector('[onclick="toggleAdvancedFilters()"]');
    const toggleText = document.getElementById('advancedFiltersToggleText');
    const showText = toggleButton?.getAttribute('data-show-text') || 'Show Advanced Filters';
    const hideText = toggleButton?.getAttribute('data-hide-text') || 'Hide Advanced Filters';
    
    if (advancedFilters.classList.contains('hidden')) {
        advancedFilters.classList.remove('hidden');
        toggleText.textContent = hideText;
    } else {
        advancedFilters.classList.add('hidden');
        toggleText.textContent = showText;
    }
}

document.addEventListener('DOMContentLoaded', function() {
    // Auto-expand if any advanced filter has a value
    const hasAdvancedFilters = 
        document.querySelector('input[name="min_request_time"]')?.value ||
        document.querySelector('input[name="max_request_time"]')?.value ||
        document.querySelector('input[name="min_query_count"]')?.value ||
        document.querySelector('input[name="max_query_count"]')?.value ||
        document.querySelector('input[name="date_from"]')?.value ||
        document.querySelector('input[name="date_to"]')?.value;

    if (hasAdvancedFilters) {
        toggleAdvancedFilters();
    }
});
</script>
