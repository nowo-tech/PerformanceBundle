{# Statistics Cards Component (Tailwind) #}
{# This component can be overridden by creating: templates/bundles/NowoPerformanceBundle/Performance/components/_statistics_tailwind.html.twig #}
<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:diagram-3', {class: 'h-6 w-6 text-gray-400'}) }}
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.total_routes'|trans({}, 'nowo_performance') }}</dt>
                        <dd class="text-lg font-semibold text-blue-600">{{ stats.total_routes }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    {% if enableAccessRecords|default(false) and stats.total_records is defined %}
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:journal-text', {class: 'h-6 w-6 text-gray-400'}) }}
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.total_records'|trans({}, 'nowo_performance') }}</dt>
                        <dd class="text-lg font-semibold text-gray-600">{{ stats.total_records|default(0)|number_format }}</dd>
                        <dd class="text-xs"><a href="{{ path('nowo_performance.access_statistics', {env: environment}) }}" class="text-indigo-600 hover:text-indigo-800">{{ 'statistics.view_records'|trans({}, 'nowo_performance') }}</a></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:bar-chart', {class: 'h-6 w-6 text-gray-400'}) }}
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.avg_queries'|trans({}, 'nowo_performance') }}</dt>
                        <dd class="text-lg font-semibold text-cyan-600">
                            {% if stats.avg_queries is defined and stats.avg_queries is not null %}
                                {{ stats.avg_queries|number_format(1) }}
                            {% else %}
                                {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:bar-chart-fill', {class: 'h-6 w-6 text-gray-400'}) }}
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.max_queries'|trans({}, 'nowo_performance') }}</dt>
                        <dd class="text-lg font-semibold text-cyan-600">
                            {% if stats.max_queries is defined and stats.max_queries is not null %}
                                {{ stats.max_queries }}
                            {% else %}
                                {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:clock', {class: 'h-6 w-6 text-gray-400'}) }}
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.avg_request_time'|trans({}, 'nowo_performance') }}</dt>
                        <dd class="text-lg font-semibold text-amber-600">{{ (stats.avg_request_time * 1000)|number_format(2) }} ms</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    {{ ux_icon('bi:lightning', {class: 'h-6 w-6 text-gray-400'}) }}
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.max_request_time'|trans({}, 'nowo_performance') }}</dt>
                        <dd class="text-lg font-semibold text-red-600">{{ (stats.max_request_time * 1000)|number_format(2) }} ms</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% if enableAccessRecords|default(false) and (stats.top_used_routes|default([])|length > 0 or stats.top_consumed_routes|default([])|length > 0) %}
<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-3 border-b border-gray-200">
            <h3 class="text-sm font-medium text-gray-900">{{ 'statistics.top_used_routes'|trans({}, 'nowo_performance') }}</h3>
        </div>
        <ul class="divide-y divide-gray-200">
            {% for r in stats.top_used_routes|default([]) %}
            <li class="px-4 py-2 flex justify-between items-center">
                <code class="text-sm text-gray-700 truncate flex-1 mr-2">{{ r.name }}</code>
                <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">{{ r.access_count|number_format }}</span>
            </li>
            {% endfor %}
        </ul>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-3 border-b border-gray-200">
            <h3 class="text-sm font-medium text-gray-900">{{ 'statistics.top_consumed_routes'|trans({}, 'nowo_performance') }}</h3>
        </div>
        <ul class="divide-y divide-gray-200">
            {% for r in stats.top_consumed_routes|default([]) %}
            <li class="px-4 py-2 flex justify-between items-center">
                <code class="text-sm text-gray-700 truncate flex-1 mr-2">{{ r.name }}</code>
                <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">{{ (r.request_time * 1000)|number_format(0) }} ms</span>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endif %}
