{# Routes Table Component #}
{# This component can be overridden by creating: templates/bundles/NowoPerformanceBundle/Performance/components/_routes_table.html.twig #}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Routes ({{ routes|length }})</h5>
            </div>
            <div class="card-body">
                {% if routes is empty %}
                    <div class="alert alert-info">
                        <p class="mb-0">No routes found for the selected filters.</p>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Route Name</th>
                                    <th>HTTP Method</th>
                                    {% if trackStatusCodes is defined and trackStatusCodes is not empty %}
                                        <th>{{ 'routes_table.status_codes'|trans({}, 'nowo_performance') }}</th>
                                    {% endif %}
                                    <th>Environment</th>
                                    <th>Request Time</th>
                                    <th>Query Time</th>
                                    <th>Total Queries</th>
                                    <th>Memory Usage</th>
                                    <th>Access Count</th>
                                    <th>Last Accessed At</th>
                                    {% if enableAccessRecords is defined and enableAccessRecords %}
                                        <th title="View access records for this route">Records</th>
                                    {% endif %}
                                    {% if enableReviewSystem is defined and enableReviewSystem %}
                                        <th>Review Status</th>
                                    {% endif %}
                                    {% if (enableRecordManagement is defined and enableRecordManagement) or (enableReviewSystem is defined and enableReviewSystem) %}
                                        <th>Actions</th>
                                    {% endif %}
                                </tr>
                            </thead>
                            <tbody>
                                {% for route in routes %}
                                    <tr>
                                        <td>
                                            <code>{{ route.name ?? 'N/A' }}</code>
                                        </td>
                                        <td>
                                            {% if route.httpMethod %}
                                                {% set methodColors = {
                                                    'GET': 'bg-primary',
                                                    'POST': 'bg-success',
                                                    'PUT': 'bg-warning',
                                                    'PATCH': 'bg-info',
                                                    'DELETE': 'bg-danger',
                                                    'OPTIONS': 'bg-secondary',
                                                    'HEAD': 'bg-dark'
                                                } %}
                                                <span class="badge {{ methodColors[route.httpMethod]|default('bg-secondary') }}">{{ route.httpMethod }}</span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        {% if trackStatusCodes is defined and trackStatusCodes is not empty %}
                                            <td>
                                                {% if route.getStatusCodes() is not empty %}
                                                    {% set totalResponses = route.getTotalResponses() %}
                                                    {% set statusList = [] %}
                                                    {% for code, count in route.getStatusCodes() %}
                                                        {% set ratio = totalResponses > 0 ? (count / totalResponses) * 100 : 0 %}
                                                        {% set statusList = statusList|merge([{code: code, count: count, ratio: ratio}]) %}
                                                    {% endfor %}
                                                    {% set statusList = statusList|sort((a, b) => b.count <=> a.count) %}
                                                    {% set errorRatio = 0 %}
                                                    {% for item in statusList %}
                                                        {% if item.code >= 400 %}
                                                            {% set errorRatio = errorRatio + item.ratio %}
                                                        {% endif %}
                                                    {% endfor %}
                                                    {% if errorRatio > 10 %}
                                                        <div class="mb-1">
                                                            <span class="badge bg-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ 'routes_table.error_rate'|trans({}, 'nowo_performance') }}: {{ errorRatio|number_format(1) }}%">
                                                                ‚ö†Ô∏è {{ errorRatio|number_format(1) }}% errors
                                                            </span>
                                                        </div>
                                                    {% endif %}
                                                    <div class="d-flex flex-wrap gap-1">
                                                        {% for item in statusList %}
                                                            {% set badgeClass = 'bg-secondary' %}
                                                            {% if item.code >= 200 and item.code < 300 %}
                                                                {% set badgeClass = 'bg-success' %}
                                                            {% elseif item.code >= 300 and item.code < 400 %}
                                                                {% set badgeClass = 'bg-info' %}
                                                            {% elseif item.code >= 400 and item.code < 500 %}
                                                                {% set badgeClass = 'bg-warning text-dark' %}
                                                            {% elseif item.code >= 500 %}
                                                                {% set badgeClass = 'bg-danger' %}
                                                            {% endif %}
                                                            <span class="badge {{ badgeClass }}" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ item.count }} / {{ totalResponses }} ({{ item.ratio|number_format(2) }}%)">
                                                                {{ item.code }}: {{ item.ratio|number_format(1) }}% ({{ item.count }})
                                                            </span>
                                                        {% endfor %}
                                                    </div>
                                                    <small class="text-muted d-block mt-1">{{ 'routes_table.total_responses'|trans({}, 'nowo_performance') }}: {{ totalResponses }}</small>
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                        <td>
                                            <span class="badge bg-secondary">{{ route.env ?? 'N/A' }}</span>
                                        </td>
                                        <td>
                                            {% if route.requestTime is not null %}
                                                {% set thresholds = thresholds|default({}) %}
                                                {% set requestTimeWarning = thresholds.request_time.warning|default(0.5) %}
                                                {% set requestTimeCritical = thresholds.request_time.critical|default(1.0) %}
                                                <span class="badge {{ route.requestTime > requestTimeCritical ? 'bg-danger' : (route.requestTime > requestTimeWarning ? 'bg-warning' : 'bg-success') }}">
                                                    {{ (route.requestTime * 1000)|number_format(2) }} ms
                                                </span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if route.queryTime is not null %}
                                                <span class="badge bg-info">
                                                    {{ (route.queryTime * 1000)|number_format(2) }} ms
                                                </span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if route.totalQueries is not null %}
                                                {% set thresholds = thresholds|default({}) %}
                                                {% set queryCountWarning = thresholds.query_count.warning|default(20) %}
                                                {% set queryCountCritical = thresholds.query_count.critical|default(50) %}
                                                <span class="badge {{ route.totalQueries > queryCountCritical ? 'bg-danger' : (route.totalQueries > queryCountWarning ? 'bg-warning' : 'bg-success') }}">
                                                    {{ route.totalQueries }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if route.memoryUsage is not null %}
                                                {% set thresholds = thresholds|default({}) %}
                                                {% set memoryUsageWarning = thresholds.memory_usage.warning|default(20.0) %}
                                                {% set memoryUsageCritical = thresholds.memory_usage.critical|default(50.0) %}
                                                {% set memoryMB = route.memoryUsage / 1024 / 1024 %}
                                                <span class="badge {{ memoryMB > memoryUsageCritical ? 'bg-danger' : (memoryMB > memoryUsageWarning ? 'bg-warning' : 'bg-info') }}">
                                                    {{ memoryMB|number_format(2) }} MB
                                                </span>
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-primary" title="Number of times this route has been accessed">
                                                {{ route.getAccessCount()|default(1)|number_format(0) }}
                                            </span>
                                        </td>
                                        <td>
                                            {% if route.getLastAccessedAt() %}
                                                {{ route.getLastAccessedAt()|date(dateTimeFormat|default('Y-m-d H:i:s')) }}
                                            {% else %}
                                                <span class="text-muted">N/A</span>
                                            {% endif %}
                                        </td>
                                        {% if enableAccessRecords is defined and enableAccessRecords %}
                                            <td>
                                                {% if route.name %}
                                                    <a href="{{ path('nowo_performance.access_records', {
                                                        route: route.name,
                                                        env: environment|default('dev')
                                                    }) }}"
                                                       class="btn btn-sm btn-outline-secondary"
                                                       title="View access records for this route">
                                                        üëÅ
                                                    </a>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                        {% if enableReviewSystem is defined and enableReviewSystem %}
                                            <td>
                                                {% if route.isReviewed() %}
                                                    <span class="badge bg-success">Reviewed</span>
                                                    {% if route.getReviewedAt() %}
                                                        <br><small class="text-muted">{{ route.getReviewedAt()|date(dateFormat|default('Y-m-d H:i')) }}</small>
                                                    {% endif %}
                                                    {% if route.getQueriesImproved() is not null %}
                                                        <br><small class="{{ route.getQueriesImproved() ? 'text-success' : 'text-danger' }}">
                                                            Queries: {{ route.getQueriesImproved() ? '‚úì Improved' : '‚úó Not Improved' }}
                                                        </small>
                                                    {% endif %}
                                                    {% if route.getTimeImproved() is not null %}
                                                        <br><small class="{{ route.getTimeImproved() ? 'text-success' : 'text-danger' }}">
                                                            Time: {{ route.getTimeImproved() ? '‚úì Improved' : '‚úó Not Improved' }}
                                                        </small>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="badge bg-secondary">Not Reviewed</span>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                        {% if (enableRecordManagement is defined and enableRecordManagement) or (enableReviewSystem is defined and enableReviewSystem) %}
                                            <td>
                                                <div class="btn-group" role="group">
                                                    {% if enableRecordManagement is defined and enableRecordManagement and deleteForms[route.id] is defined %}
                                                        {% set deleteForm = deleteForms[route.id] %}
                                                        {{ form_start(deleteForm, {'action': path('nowo_performance.delete', {id: route.id}), 'attr': {'style': 'display: inline;', 'onsubmit': "return confirm('" ~ 'confirmations.delete_record'|trans({}, 'nowo_performance') ~ "');"}}) }}
                                                            {{ form_widget(deleteForm) }}
                                                        {{ form_end(deleteForm) }}
                                                    {% endif %}
                                                    {% if enableReviewSystem is defined and enableReviewSystem %}
                                                        {% if not route.isReviewed() %}
                                                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#reviewModal{{ route.id }}" title="Mark as reviewed">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                                                </svg>
                                                            </button>
                                                        {% endif %}
                                                    {% endif %}
                                                </div>
                                                {% if enableReviewSystem is defined and enableReviewSystem and not route.isReviewed() and reviewForms[route.id] is defined %}
                                                    {% set reviewForm = reviewForms[route.id] %}
                                                    <div class="modal fade" id="reviewModal{{ route.id }}" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                {{ form_start(reviewForm, {'action': path('nowo_performance.review', {id: route.id})}) }}
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title">{{ 'review.modal_title'|trans({}, 'nowo_performance') }}</h5>
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <div class="mb-3">
                                                                            {% if not reviewForm.queries_improved.isRendered %}
                                                                                {{ form_label(reviewForm.queries_improved) }}
                                                                                {{ form_widget(reviewForm.queries_improved) }}
                                                                                {{ form_errors(reviewForm.queries_improved) }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div class="mb-3">
                                                                            {% if not reviewForm.time_improved.isRendered %}
                                                                                {{ form_label(reviewForm.time_improved) }}
                                                                                {{ form_widget(reviewForm.time_improved) }}
                                                                                {{ form_errors(reviewForm.time_improved) }}
                                                                            {% endif %}
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'routes_table.cancel'|trans({}, 'nowo_performance') }}</button>
                                                                        {% if not reviewForm.submit.isRendered %}
                                                                            {{ form_widget(reviewForm.submit) }}
                                                                        {% endif %}
                                                                    </div>
                                                                {{ form_end(reviewForm) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
