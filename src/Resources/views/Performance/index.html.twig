                    Diagnose
                </a>
                <a href="{{ path('nowo_performance.statistics', {env: environment}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    {{ performance_icon('chart-bar', {class: 'w-4 h-4 mr-2'}, '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>') }}
                    {{ 'dashboard.advanced_statistics'|trans({}, 'nowo_performance') }}
                </a>
                <a href="{{ path('nowo_performance.export_csv', app.request.query.all) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    {{ performance_icon('arrow-down-tray', {class: 'w-4 h-4 mr-2'}, '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>') }}
                    {{ 'dashboard.export_csv'|trans({}, 'nowo_performance') }}
                </a>
                <a href="{{ path('nowo_performance.export_json', app.request.query.all) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
                    {{ performance_icon('document-text', {class: 'w-4 h-4 mr-2'}, '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>') }}
                    {{ 'dashboard.export_json'|trans({}, 'nowo_performance') }}
                </a>
                <form method="post" action="{{ path('nowo_performance.clear') }}" onsubmit="return confirm('{{ 'confirmations.clear_all_records'|trans({}, 'nowo_performance') }}');" class="inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('clear_performance_data') }}">
                    <input type="hidden" name="env" value="{{ environment }}">
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        {{ performance_icon('trash', {class: 'w-4 h-4 mr-2'}, '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>') }}
                        {{ 'dashboard.clear_all_records'|trans({}, 'nowo_performance') }}
                    </button>
                </form>
            </div>
        </div>
    {% endif %}

    {# Show missing dependencies warning #}
    {% if missingDependencies is not empty %}
        {% if template == 'bootstrap' %}
            <div class="row mb-4">
                <div class="col-12">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Optional Dependencies Missing</h5>
                        <p class="mb-2">Some features are using fallback mode. For better performance, consider installing:</p>
                        <ul class="mb-2">
                            {% for dep in missingDependencies %}
                                <li>
                                    <strong>{{ dep.feature }}:</strong> {{ dep.message }}
                                    <br>
                                    <code class="text-dark">{{ dep.install_command }}</code>
                                </li>
                            {% endfor %}
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="mb-8 rounded-md bg-yellow-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        {{ performance_icon('exclamation-triangle', {class: 'h-5 w-5 text-yellow-400'}, '<svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" /></svg>') }}
                    </div>
                    <div class="ml-3 flex-1">
                        <h3 class="text-sm font-medium text-yellow-800">Optional Dependencies Missing</h3>
                        <div class="mt-2 text-sm text-yellow-700">
                            <p class="mb-2">Some features are using fallback mode. For better performance, consider installing:</p>
                            <ul class="list-disc list-inside space-y-1">
                                {% for dep in missingDependencies %}
                                    <li>
                                        <strong>{{ dep.feature }}:</strong> {{ dep.message }}
                                        <br>
                                        <code class="bg-yellow-100 px-2 py-1 rounded text-xs">{{ dep.install_command }}</code>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endif %}

    {# Components Section - Shared for both templates #}
    {% if useComponents and component is defined %}
        {# Statistics Component - Using Symfony UX Twig Component #}
        {{ component('nowo_performance.Statistics', { stats: stats, template: template }) }}

        {# Filters Component - Using Symfony UX Twig Component #}
        {{ component('nowo_performance.Filters', { form: form, template: template }) }}

        {# Charts Component - Using Symfony UX Twig Component #}
        {{ component('nowo_performance.Charts', { 
            environment: environment, 
            currentRoute: currentRoute, 
            chartDataUrl: path('nowo_performance.api.chart_data'),
            template: template 
        }) }}

        {# Routes Table Component - Using Symfony UX Twig Component #}
        {{ component('nowo_performance.RoutesTable', { 
            routes: routes, 
            template: template,
            thresholds: thresholds|default({}),
            enableRecordManagement: enableRecordManagement,
            enableReviewSystem: enableReviewSystem,
            reviewForms: reviewForms|default({})
        }) }}
    {% else %}
        {# Fallback to includes if components are not available #}
        {% include '@NowoPerformanceBundle/Performance/components/_statistics_' ~ template ~ '.html.twig' %}

        {% include '@NowoPerformanceBundle/Performance/components/_filters_' ~ template ~ '.html.twig' %}

        {% include '@NowoPerformanceBundle/Performance/components/_charts_' ~ template ~ '.html.twig' %}

        {% include '@NowoPerformanceBundle/Performance/components/_routes_table_' ~ template ~ '.html.twig' with {
            thresholds: thresholds|default({}),
            enableRecordManagement: enableRecordManagement,
            enableReviewSystem: enableReviewSystem,
            reviewForms: reviewForms|default({})
        } %}
    {% endif %}
    
    {# Include dependency modal #}
    {% include '@NowoPerformanceBundle/Performance/components/_dependency_modal.html.twig' with {template: template} %}
{% endblock %}

{% block scripts_extra %}
    <script>
        // Make missingDependencies available to JavaScript
        window.missingDependencies = {{ missingDependencies|json_encode|raw }};
    </script>
    {% if autoRefreshInterval > 0 %}
    <script>
        // Auto-refresh dashboard
        (function() {
            const refreshInterval = {{ autoRefreshInterval }} * 1000; // Convert to milliseconds
            let refreshTimer;
            
            function refreshDashboard() {
                // Reload the page to get fresh data
                window.location.reload();
            }
            
            // Start auto-refresh
            refreshTimer = setInterval(refreshDashboard, refreshInterval);
            
            // Show refresh indicator
            const refreshIndicator = document.createElement('div');
            refreshIndicator.className = 'position-fixed bottom-0 end-0 m-3 p-2 bg-info text-white rounded shadow';
            refreshIndicator.style.zIndex = '1050';
            refreshIndicator.innerHTML = '<small><i class="bi bi-arrow-clockwise"></i> Auto-refresh: <span id="refresh-countdown">' + {{ autoRefreshInterval }} + '</span>s</small>';
            document.body.appendChild(refreshIndicator);
            
            // Update countdown
            let countdown = {{ autoRefreshInterval }};
            const countdownElement = document.getElementById('refresh-countdown');
            setInterval(function() {
                countdown--;
                if (countdown <= 0) {
                    countdown = {{ autoRefreshInterval }};
                }
                if (countdownElement) {
                    countdownElement.textContent = countdown;
                }
            }, 1000);
            
            // Pause on window focus/blur
            let isPaused = false;
            window.addEventListener('blur', function() {
                if (!isPaused) {
                    clearInterval(refreshTimer);
                    isPaused = true;
                }
            });
            
            window.addEventListener('focus', function() {
                if (isPaused) {
                    refreshTimer = setInterval(refreshDashboard, refreshInterval);
                    isPaused = false;
                }
            });
        })();
    </script>
    {% endif %}
{% endblock %}
