        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1>{{ 'dashboard.title'|trans({}, 'nowo_performance') }}</h1>
                        <p class="text-muted">{{ 'dashboard.subtitle'|trans({}, 'nowo_performance') }}</p>
                    </div>
                    <div class="d-flex gap-2">
