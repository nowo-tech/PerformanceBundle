                        <a href="{{ path('nowo_performance.statistics', {env: environment}) }}" class="btn btn-info text-white">
                            {{ performance_icon('chart-bar', {class: 'me-1'}, '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="display: inline-block; vertical-align: middle; margin-right: 4px;"><path d="M4 11a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0v-1zm6-4a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0V7zM7 9a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0V9z"/><path d="M9 1.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zM5 1.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zM3.5 3A.5.5 0 0 0 3 3.5v.5A.5.5 0 0 0 3.5 4h.5a.5.5 0 0 0 .5-.5v-.5A.5.5 0 0 0 4 3h-.5zm9 0a.5.5 0 0 0-.5.5v.5a.5.5 0 0 0 .5.5h.5a.5.5 0 0 0 .5-.5v-.5a.5.5 0 0 0-.5-.5h-.5zM4 4.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-7z"/></svg>') }}
                            {{ 'dashboard.advanced_statistics'|trans({}, 'nowo_performance') }}
                        </a>
                        <a href="{{ path('nowo_performance.export_csv', app.request.query.all) }}" class="btn btn-success">
                            {{ performance_icon('arrow-down-tray', {class: 'me-1'}, '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="display: inline-block; vertical-align: middle; margin-right: 4px;"><path d="M.5 9.9a.5.5 0 0 1 .5.5h2a.5.5 0 0 1 0 1h-2A1.5 1.5 0 0 1 0 10.5v-7A1.5 1.5 0 0 1 1.5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .5.5z"/><path d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/></svg>') }}
                            {{ 'dashboard.export_csv'|trans({}, 'nowo_performance') }}
                        </a>
                        <a href="{{ path('nowo_performance.export_json', app.request.query.all) }}" class="btn btn-info text-white">
                            {{ performance_icon('document-text', {class: 'me-1'}, '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="display: inline-block; vertical-align: middle; margin-right: 4px;"><path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/><path d="M5 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/></svg>') }}
                            {{ 'dashboard.export_json'|trans({}, 'nowo_performance') }}
                        </a>
                        <form method="post" action="{{ path('nowo_performance.clear') }}" onsubmit="return confirm('{{ 'confirmations.clear_all_records'|trans({}, 'nowo_performance') }}');" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('clear_performance_data') }}">
                            <input type="hidden" name="env" value="{{ environment }}">
                            <button type="submit" class="btn btn-danger">
                                {{ performance_icon('trash', {class: 'me-1'}, '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" style="display: inline-block; vertical-align: middle; margin-right: 4px;"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/><path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/></svg>') }}
                                {{ 'dashboard.clear_all_records'|trans({}, 'nowo_performance') }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="mb-8 flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">{{ 'dashboard.title'|trans({}, 'nowo_performance') }}</h1>
                <p class="mt-2 text-sm text-gray-600">{{ 'dashboard.subtitle'|trans({}, 'nowo_performance') }}</p>
            </div>
            <div class="flex space-x-2">
                <a href="{{ path('nowo_performance.diagnose') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-yellow-800 bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
