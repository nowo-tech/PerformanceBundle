<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Performance Bundle{% endblock %}</title>
    {% if template == 'bootstrap' %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background-color: #f8f9fa;
            }
            .card {
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
                border: 1px solid rgba(0, 0, 0, 0.125);
            }
            code {
                background-color: #f8f9fa;
                padding: 0.2rem 0.4rem;
                border-radius: 0.25rem;
                font-size: 0.875em;
            }
        </style>
    {% else %}
        <script src="https://cdn.tailwindcss.com"></script>
        <style>
            code {
                background-color: #f3f4f6;
                padding: 0.2rem 0.4rem;
                border-radius: 0.25rem;
                font-size: 0.875em;
            }
        </style>
    {% endif %}
    {% block styles %}{% endblock styles %}
    {% block head_extra %}{% endblock %}
</head>
<body>

{% block flash_messages %}
    {% if template == 'bootstrap' %}
        {# Flash messages - Bootstrap version #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show m-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning alert-dismissible fade show m-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% else %}
        {# Flash messages - Tailwind version #}
        {% for message in app.flashes('success') %}
            <div class="mb-4 rounded-md bg-green-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        {{ ux_icon('bi:check-circle', {class: 'h-5 w-5 text-green-400'}) }}
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-green-800">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="mb-4 rounded-md bg-red-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        {{ ux_icon('bi:x-circle', {class: 'h-5 w-5 text-red-400'}) }}
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-red-800">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="mb-4 rounded-md bg-yellow-50 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        {{ ux_icon('bi:exclamation-triangle', {class: 'h-5 w-5 text-yellow-400'}) }}
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-yellow-800">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block body %}
    {% if template == 'bootstrap' %}
        <div class="container-fluid py-4">
            {{ block('flash_messages') }}
            {{ block('content') }}
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% else %}
        <div class="min-h-screen bg-gray-50 py-8">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                {{ block('flash_messages') }}
                {{ block('content') }}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
{% endblock %}

{% block scripts_extra %}{% endblock %}

</body>
</html>
