{% if template == 'bootstrap' %}
    {# Bootstrap version #}
    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.total_routes'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-primary">{{ stats.total_routes }}</h2>
                </div>
            </div>
        </div>
        {% if enableAccessRecords and stats.total_records is defined %}
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.total_records'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-secondary">{{ stats.total_records|default(0)|number_format }}</h2>
                    <small><a href="{{ path('nowo_performance.access_statistics', {env: environment}) }}">{{ 'statistics.view_records'|trans({}, 'nowo_performance') }}</a></small>
                </div>
            </div>
        </div>
        {% endif %}
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.avg_queries'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-info">
                        {% if stats.avg_queries is defined and stats.avg_queries is not null %}
                            {{ stats.avg_queries|number_format(1) }}
                        {% else %}
                            {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.max_queries'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-info">
                        {% if stats.max_queries is defined and stats.max_queries is not null %}
                            {{ stats.max_queries }}
                        {% else %}
                            {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.avg_request_time'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-warning">
                        {% if stats.avg_request_time is not null %}
                            {{ (stats.avg_request_time * 1000)|number_format(2) }} ms
                        {% else %}
                            {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.max_request_time'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-danger">
                        {% if stats.max_request_time is not null %}
                            {{ (stats.max_request_time * 1000)|number_format(2) }} ms
                        {% else %}
                            {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>
    {% if enableAccessRecords and (stats.top_used_routes|default([])|length > 0 or stats.top_consumed_routes|default([])|length > 0) %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header py-2">
                    <h6 class="mb-0">{{ 'statistics.top_used_routes'|trans({}, 'nowo_performance') }}</h6>
                </div>
                <div class="card-body py-2">
                    <ul class="list-group list-group-flush list-group-numbered">
                        {% for r in stats.top_used_routes|default([]) %}
                        <li class="list-group-item d-flex justify-content-between py-1 px-0">
                            <code class="small">{{ r.name }}</code>
                            <span class="badge bg-primary">{{ r.access_count|number_format }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header py-2">
                    <h6 class="mb-0">{{ 'statistics.top_consumed_routes'|trans({}, 'nowo_performance') }}</h6>
                </div>
                <div class="card-body py-2">
                    <ul class="list-group list-group-flush list-group-numbered">
                        {% for r in stats.top_consumed_routes|default([]) %}
                        <li class="list-group-item d-flex justify-content-between py-1 px-0">
                            <code class="small">{{ r.name }}</code>
                            <span class="badge bg-danger">{{ (r.request_time * 1000)|number_format(0) }} ms</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% else %}
    {# Tailwind version #}
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.total_routes'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-blue-600">{{ stats.total_routes }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        {% if enableAccessRecords and stats.total_records is defined %}
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        {{ ux_icon('bi:journal-text', {class: 'h-6 w-6 text-gray-400'}) }}
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.total_records'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-gray-600">{{ stats.total_records|default(0)|number_format }}</dd>
                            <dd class="text-xs"><a href="{{ path('nowo_performance.access_statistics', {env: environment}) }}" class="text-indigo-600 hover:text-indigo-800">{{ 'statistics.view_records'|trans({}, 'nowo_performance') }}</a></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        {{ ux_icon('bi:bar-chart', {class: 'h-6 w-6 text-gray-400'}) }}
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.avg_queries'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-cyan-600">
                                {% if stats.avg_queries is defined and stats.avg_queries is not null %}
                                    {{ stats.avg_queries|number_format(1) }}
                                {% else %}
                                    {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        {{ ux_icon('bi:bar-chart-fill', {class: 'h-6 w-6 text-gray-400'}) }}
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.max_queries'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-cyan-600">
                                {% if stats.max_queries is defined and stats.max_queries is not null %}
                                    {{ stats.max_queries }}
                                {% else %}
                                    {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.avg_request_time'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-amber-600">
                                {% if stats.avg_request_time is not null %}
                                    {{ (stats.avg_request_time * 1000)|number_format(2) }} ms
                                {% else %}
                                    {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.max_request_time'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-red-600">
                                {% if stats.max_request_time is not null %}
                                    {{ (stats.max_request_time * 1000)|number_format(2) }} ms
                                {% else %}
                                    {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if enableAccessRecords and (stats.top_used_routes|default([])|length > 0 or stats.top_consumed_routes|default([])|length > 0) %}
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-3 border-b border-gray-200">
                <h3 class="text-sm font-medium text-gray-900">{{ 'statistics.top_used_routes'|trans({}, 'nowo_performance') }}</h3>
            </div>
            <ul class="divide-y divide-gray-200">
                {% for r in stats.top_used_routes|default([]) %}
                <li class="px-4 py-2 flex justify-between items-center">
                    <code class="text-sm text-gray-700 truncate flex-1 mr-2">{{ r.name }}</code>
                    <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">{{ r.access_count|number_format }}</span>
                </li>
                {% endfor %}
            </ul>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="px-4 py-3 border-b border-gray-200">
                <h3 class="text-sm font-medium text-gray-900">{{ 'statistics.top_consumed_routes'|trans({}, 'nowo_performance') }}</h3>
            </div>
            <ul class="divide-y divide-gray-200">
                {% for r in stats.top_consumed_routes|default([]) %}
                <li class="px-4 py-2 flex justify-between items-center">
                    <code class="text-sm text-gray-700 truncate flex-1 mr-2">{{ r.name }}</code>
                    <span class="inline-flex px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">{{ (r.request_time * 1000)|number_format(0) }} ms</span>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {% endif %}
{% endif %}
