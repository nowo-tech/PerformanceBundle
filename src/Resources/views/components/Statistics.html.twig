{% if template == 'bootstrap' %}
    {# Bootstrap version #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.total_routes'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-primary">{{ stats.total_routes }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.total_queries'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-info">{{ stats.total_queries }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.avg_request_time'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-warning">
                        {% if stats.avg_request_time is not null %}
                            {{ (stats.avg_request_time * 1000)|number_format(2) }} ms
                        {% else %}
                            {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ 'statistics.max_request_time'|trans({}, 'nowo_performance') }}</h5>
                    <h2 class="text-danger">
                        {% if stats.max_request_time is not null %}
                            {{ (stats.max_request_time * 1000)|number_format(2) }} ms
                        {% else %}
                            {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>
{% else %}
    {# Tailwind version #}
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.total_routes'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-blue-600">{{ stats.total_routes }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.total_queries'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-cyan-600">{{ stats.total_queries }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.avg_request_time'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-amber-600">
                                {% if stats.avg_request_time is not null %}
                                    {{ (stats.avg_request_time * 1000)|number_format(2) }} ms
                                {% else %}
                                    {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">{{ 'statistics.max_request_time'|trans({}, 'nowo_performance') }}</dt>
                            <dd class="text-lg font-semibold text-red-600">
                                {% if stats.max_request_time is not null %}
                                    {{ (stats.max_request_time * 1000)|number_format(2) }} ms
                                {% else %}
                                    {{ 'statistics.not_available'|trans({}, 'nowo_performance') }}
                                {% endif %}
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
