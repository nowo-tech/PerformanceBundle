                            {{ form_label(form.date_from, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            <div class="mt-1">
                                {{ form_widget(form.date_from, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                            </div>
