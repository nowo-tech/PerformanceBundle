                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><a href="{{ path('nowo_performance.index', _query|merge({sort: 'totalQueries', order: (_sortBy == 'totalQueries' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-gray-600 hover:text-gray-900" title="{{ (_sortBy == 'totalQueries' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.total_queries'|trans({}, 'nowo_performance') }}{% if _sortBy == 'totalQueries' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><a href="{{ path('nowo_performance.index', _query|merge({sort: 'memoryUsage', order: (_sortBy == 'memoryUsage' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-gray-600 hover:text-gray-900" title="{{ (_sortBy == 'memoryUsage' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.memory_usage'|trans({}, 'nowo_performance') }}{% if _sortBy == 'memoryUsage' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><a href="{{ path('nowo_performance.index', _query|merge({sort: 'lastAccessedAt', order: (_sortBy == 'lastAccessedAt' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-gray-600 hover:text-gray-900" title="{{ (_sortBy == 'lastAccessedAt' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.last_accessed_at'|trans({}, 'nowo_performance') }}{% if _sortBy == 'lastAccessedAt' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                {% if enableReviewSystem %}
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'routes_table.review_status'|trans({}, 'nowo_performance') }}</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'routes_table.queries_time'|trans({}, 'nowo_performance') }}</th>
                                {% endif %}
                                {% if enableRecordManagement or enableReviewSystem %}
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'routes_table.actions'|trans({}, 'nowo_performance') }}</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
