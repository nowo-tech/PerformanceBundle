                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'routes_table.environment'|trans({}, 'nowo_performance') }}</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><a href="{{ path('nowo_performance.index', _query|merge({sort: 'requestTime', order: (_sortBy == 'requestTime' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-gray-600 hover:text-gray-900" title="{{ (_sortBy == 'requestTime' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.request_time'|trans({}, 'nowo_performance') }}{% if _sortBy == 'requestTime' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
