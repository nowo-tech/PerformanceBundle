                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if route.httpMethod %}
                                            {% set methodColors = {
                                                'GET': 'bg-blue-100 text-blue-800',
                                                'POST': 'bg-green-100 text-green-800',
                                                'PUT': 'bg-yellow-100 text-yellow-800',
                                                'PATCH': 'bg-indigo-100 text-indigo-800',
                                                'DELETE': 'bg-red-100 text-red-800',
                                                'OPTIONS': 'bg-gray-100 text-gray-800',
                                                'HEAD': 'bg-gray-200 text-gray-900'
                                            } %}
                                            <span class="px-2 py-1 text-xs font-semibold rounded-full {{ methodColors[route.httpMethod]|default('bg-gray-100 text-gray-800') }}">
                                                {{ route.httpMethod }}
                                            </span>
                                        {% else %}
                                            <span class="text-gray-400">N/A</span>
                                        {% endif %}
                                    </td>
                                    {% if trackStatusCodes is defined and trackStatusCodes is not empty %}
                                        <td class="px-6 py-4">
                                            {% if route.getStatusCodes() is not empty %}
                                                {% set totalResponses = route.getTotalResponses() %}
                                                {% set statusList = [] %}
                                                {% for code, count in route.getStatusCodes() %}
                                                    {% set ratio = totalResponses > 0 ? (count / totalResponses) * 100 : 0 %}
                                                    {% set statusList = statusList|merge([{code: code, count: count, ratio: ratio}]) %}
                                                {% endfor %}
                                                {% set statusList = statusList|sort((a, b) => b.count <=> a.count) %}
                                                {% set errorRatio = 0 %}
                                                {% for item in statusList %}
                                                    {% if item.code >= 400 %}
                                                        {% set errorRatio = errorRatio + item.ratio %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% if errorRatio > 10 %}
                                                    <div class="mb-2">
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 border border-red-300" title="{{ 'routes_table.error_rate'|trans({}, 'nowo_performance') }}: {{ errorRatio|number_format(1) }}%">
                                                            ⚠️ {{ errorRatio|number_format(1) }}% errors
                                                        </span>
                                                    </div>
                                                {% endif %}
                                                <div class="flex flex-wrap gap-1">
                                                    {% for item in statusList %}
                                                        {% set badgeClass = 'bg-gray-100 text-gray-800' %}
                                                        {% if item.code >= 200 and item.code < 300 %}
                                                            {% set badgeClass = 'bg-green-100 text-green-800' %}
                                                        {% elseif item.code >= 300 and item.code < 400 %}
                                                            {% set badgeClass = 'bg-blue-100 text-blue-800' %}
                                                        {% elseif item.code >= 400 and item.code < 500 %}
                                                            {% set badgeClass = 'bg-yellow-100 text-yellow-800' %}
                                                        {% elseif item.code >= 500 %}
                                                            {% set badgeClass = 'bg-red-100 text-red-800' %}
                                                        {% endif %}
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full {{ badgeClass }}" title="{{ item.count }} / {{ totalResponses }} ({{ item.ratio|number_format(1) }}%)">
                                                            {{ item.code }}: {{ item.ratio|number_format(1) }}% ({{ item.count }})
                                                        </span>
                                                    {% endfor %}
                                                </div>
                                            {% else %}
                                                <span class="text-gray-400">N/A</span>
                                            {% endif %}
                                        </td>
                                    {% endif %}
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800" title="Number of times this route has been accessed">
                                            {{ route.getAccessCount()|default(1)|number_format(0) }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">{{ route.env ?? 'N/A' }}</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if route.requestTime is not null %}
                                            {% set thresholds = thresholds|default({}) %}
                                            {% set requestTimeWarning = (thresholds.request_time.warning|default(0.5)) * 1000 %}
                                            {% set requestTimeCritical = (thresholds.request_time.critical|default(1.0)) * 1000 %}
                                            {% set timeMs = route.requestTime * 1000 %}
                                            {% if timeMs > requestTimeCritical %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">{{ timeMs|number_format(2) }} ms</span>
                                            {% elseif timeMs > requestTimeWarning %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">{{ timeMs|number_format(2) }} ms</span>
                                            {% else %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">{{ timeMs|number_format(2) }} ms</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-sm text-gray-500">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if route.queryTime is not null %}
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-cyan-100 text-cyan-800">{{ (route.queryTime * 1000)|number_format(2) }} ms</span>
                                        {% else %}
                                            <span class="text-sm text-gray-500">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if route.totalQueries is not null %}
                                            {% set thresholds = thresholds|default({}) %}
                                            {% set queryCountWarning = thresholds.query_count.warning|default(20) %}
                                            {% set queryCountCritical = thresholds.query_count.critical|default(50) %}
                                            {% if route.totalQueries > queryCountCritical %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">{{ route.totalQueries }}</span>
                                            {% elseif route.totalQueries > queryCountWarning %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">{{ route.totalQueries }}</span>
                                            {% else %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">{{ route.totalQueries }}</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-sm text-gray-500">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if route.memoryUsage is not null %}
                                            {% set thresholds = thresholds|default({}) %}
                                            {% set memoryUsageWarning = thresholds.memory_usage.warning|default(20.0) %}
                                            {% set memoryUsageCritical = thresholds.memory_usage.critical|default(50.0) %}
                                            {% set memoryMB = route.memoryUsage / 1024 / 1024 %}
                                            {% if memoryMB > memoryUsageCritical %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">{{ memoryMB|number_format(2) }} MB</span>
                                            {% elseif memoryMB > memoryUsageWarning %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">{{ memoryMB|number_format(2) }} MB</span>
                                            {% else %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-cyan-100 text-cyan-800">{{ memoryMB|number_format(2) }} MB</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-sm text-gray-500">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        {% if route.getLastAccessedAt() %}{{ route.getLastAccessedAt()|date(dateTimeFormat|default('Y-m-d H:i:s')) }}{% else %}<span class="text-gray-400">N/A</span>{% endif %}
                                    </td>
                                    {% if enableReviewSystem %}
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if route.isReviewed() %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">{{ 'routes_table.reviewed'|trans({}, 'nowo_performance') }}</span>
                                                {% if route.getReviewedAt() %}
                                                    <div class="mt-1 text-xs text-gray-500">{{ route.getReviewedAt()|date(dateFormat|default('Y-m-d H:i')) }}</div>
                                                {% endif %}
                                            {% else %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">{{ 'routes_table.not_reviewed'|trans({}, 'nowo_performance') }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {% if route.getQueriesImproved() is not null %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ route.getQueriesImproved() ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                                    {{ route.getQueriesImproved() ? 'routes_table.queries_improved'|trans({}, 'nowo_performance') : 'routes_table.queries_not_improved'|trans({}, 'nowo_performance') }}
                                                </span>
                                                {% if route.getTimeImproved() is not null %}<br class="mt-1">{% endif %}
                                            {% endif %}
                                            {% if route.getTimeImproved() is not null %}
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ route.getTimeImproved() ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                                    {{ route.getTimeImproved() ? 'routes_table.time_improved'|trans({}, 'nowo_performance') : 'routes_table.time_not_improved'|trans({}, 'nowo_performance') }}
                                                </span>
                                            {% endif %}
                                            {% if route.getQueriesImproved() is null and route.getTimeImproved() is null %}
                                                <span class="text-gray-400">—</span>
                                            {% endif %}
                                        </td>
                                    {% endif %}
                                    {% if enableRecordManagement or enableReviewSystem %}
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                            <div class="flex space-x-2">
                                                {% if enableRecordManagement and (deleteForms|default({}))[route.getId()] is defined %}
                                                    {% set deleteForm = deleteForms[route.getId()] %}
                                                    {{ form_start(deleteForm, {'action': path('nowo_performance.delete', {id: route.getId()}), 'attr': {'style': 'display: inline;', 'onsubmit': "return confirm('" ~ ('routes_table.confirm_delete'|trans({}, 'nowo_performance')) ~ "');"}}) }}
                                                        {{ form_widget(deleteForm._token) }}
                                                        <button type="submit" class="text-red-600 hover:text-red-900" title="{{ 'routes_table.delete'|trans({}, 'nowo_performance') }}">
                                                            {{ ux_icon('bi:trash', {class: 'w-4 h-4'}) }}
                                                        </button>
                                                    {{ form_end(deleteForm) }}
                                                {% endif %}
                                                {% if enableReviewSystem and reviewForms[route.getId()] is defined %}
                                                    {% set reviewForm = reviewForms[route.getId()] %}
                                                    <button type="button" class="text-blue-600 hover:text-blue-900" onclick="document.getElementById('reviewModal{{ route.getId() }}').classList.remove('hidden')" title="{{ route.isReviewed() ? 'routes_table.edit_review'|trans({}, 'nowo_performance') : 'routes_table.mark_as_reviewed'|trans({}, 'nowo_performance') }}">
                                                        {{ ux_icon(route.isReviewed() ? 'bi:pencil-square' : 'bi:check-circle', {class: 'w-4 h-4'}) }}
                                                    </button>
                                                    <div id="reviewModal{{ route.getId() }}" class="hidden fixed inset-0 z-50 flex min-h-screen items-center justify-center overflow-y-auto bg-gray-600/50 p-4" onclick="if (event.target === this) this.classList.add('hidden')">
                                                        <div class="relative w-full max-w-md max-h-[90vh] overflow-y-auto rounded-lg border border-gray-200 bg-white p-5 shadow-lg" onclick="event.stopPropagation()">
                                                            {{ form_start(reviewForm, {'action': path('nowo_performance.review', {id: route.getId()})}) }}
                                                                <div class="flex justify-between items-center mb-4">
                                                                    <h3 class="text-lg font-medium">{{ (route.isReviewed() ? 'review.modal_title_edit' : 'review.modal_title')|trans({}, 'nowo_performance') }}</h3>
                                                                            <button type="button" onclick="document.getElementById('reviewModal{{ route.getId() }}').classList.add('hidden')" class="text-gray-400 hover:text-gray-600">
                                                                                {{ ux_icon('bi:x-lg', {class: 'w-5 h-5'}) }}
                                                                            </button>
                                                                        </div>
                                                                        <div class="mb-4">
                                                                            {{ form_label(reviewForm.queries_improved, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                                                            {{ form_widget(reviewForm.queries_improved, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                                                            {{ form_errors(reviewForm.queries_improved) }}
                                                                        </div>
                                                                        <div class="mb-4">
                                                                            {{ form_label(reviewForm.time_improved, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                                                            {{ form_widget(reviewForm.time_improved, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                                                            {{ form_errors(reviewForm.time_improved) }}
                                                                        </div>
                                                                        <div class="flex justify-end space-x-2">
                                                                            <button type="button" onclick="document.getElementById('reviewModal{{ route.getId() }}').classList.add('hidden')" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">{{ 'routes_table.cancel'|trans({}, 'nowo_performance') }}</button>
                                                                            {{ form_widget(reviewForm.submit, {'attr': {'class': 'px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700'}}) }}
                                                                        </div>
                                                                    {{ form_end(reviewForm) }}
                                                                </div>
                                                            </div>
                                                {% endif %}
                                            </div>
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
