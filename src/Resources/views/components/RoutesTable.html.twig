{% set enableRecordManagement = enableRecordManagement|default(false) %}
{% set enableReviewSystem = enableReviewSystem|default(false) %}
{% set reviewForms = reviewForms|default({}) %}
{% set _query = app.request.query.all|default({}) %}
{% set _sortBy = sortBy|default('requestTime') %}
{% set _order = order|default('DESC') %}

{% if template == 'bootstrap' %}
    {# Bootstrap version #}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">{{ 'routes_table.title'|trans({}, 'nowo_performance') }} ({{ routes|length }})</h5>
                </div>
                <div class="card-body">
                    {% if routes is empty %}
                        <div class="alert alert-info">
                            <p class="mb-0">{{ 'dashboard.no_routes_found'|trans({}, 'nowo_performance') }}</p>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'name', order: (_sortBy == 'name' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark">{{ 'routes_table.route_name'|trans({}, 'nowo_performance') }}{% if _sortBy == 'name' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        <th>{{ 'routes_table.http_method'|trans({}, 'nowo_performance') }}</th>
                                        {% if trackStatusCodes is defined and trackStatusCodes is not empty %}
                                            <th>{{ 'routes_table.status_codes'|trans({}, 'nowo_performance') }}</th>
                                        {% endif %}
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'accessCount', order: (_sortBy == 'accessCount' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark" title="{{ (_sortBy == 'accessCount' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.access_count'|trans({}, 'nowo_performance') }}{% if _sortBy == 'accessCount' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        <th>{{ 'routes_table.environment'|trans({}, 'nowo_performance') }}</th>
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'requestTime', order: (_sortBy == 'requestTime' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark" title="{{ (_sortBy == 'requestTime' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.request_time'|trans({}, 'nowo_performance') }}{% if _sortBy == 'requestTime' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'queryTime', order: (_sortBy == 'queryTime' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark" title="{{ (_sortBy == 'queryTime' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.query_time'|trans({}, 'nowo_performance') }}{% if _sortBy == 'queryTime' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'totalQueries', order: (_sortBy == 'totalQueries' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark" title="{{ (_sortBy == 'totalQueries' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.total_queries'|trans({}, 'nowo_performance') }}{% if _sortBy == 'totalQueries' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'memoryUsage', order: (_sortBy == 'memoryUsage' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark" title="{{ (_sortBy == 'memoryUsage' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.memory_usage'|trans({}, 'nowo_performance') }}{% if _sortBy == 'memoryUsage' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        <th><a href="{{ path('nowo_performance.index', _query|merge({sort: 'lastAccessedAt', order: (_sortBy == 'lastAccessedAt' and _order == 'DESC') ? 'ASC' : 'DESC', page: 1})) }}" class="text-decoration-none text-dark" title="{{ (_sortBy == 'lastAccessedAt' and _order == 'ASC') ? 'routes_table.sort_descending'|trans({}, 'nowo_performance') : 'routes_table.sort_ascending'|trans({}, 'nowo_performance') }}">{{ 'routes_table.last_accessed_at'|trans({}, 'nowo_performance') }}{% if _sortBy == 'lastAccessedAt' %} {% if _order == 'DESC' %}↓{% else %}↑{% endif %}{% endif %}</a></th>
                                        {% if enableReviewSystem %}
                                            <th>{{ 'routes_table.review_status'|trans({}, 'nowo_performance') }}</th>
                                            <th>{{ 'routes_table.queries_time'|trans({}, 'nowo_performance') }}</th>
                                        {% endif %}
                                        {% if enableRecordManagement or enableReviewSystem %}
                                            <th>{{ 'routes_table.actions'|trans({}, 'nowo_performance') }}</th>
                                        {% endif %}
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for route in routes %}
                                        <tr>
                                            <td><code>{{ route.name ?? 'N/A' }}</code></td>
                                            <td>
                                                {% if route.httpMethod %}
                                                    {% set methodColors = {
                                                        'GET': 'bg-primary',
                                                        'POST': 'bg-success',
                                                        'PUT': 'bg-warning',
                                                        'PATCH': 'bg-info',
                                                        'DELETE': 'bg-danger',
                                                        'OPTIONS': 'bg-secondary',
                                                        'HEAD': 'bg-dark'
                                                    } %}
                                                    <span class="badge {{ methodColors[route.httpMethod]|default('bg-secondary') }}">{{ route.httpMethod }}</span>
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                            {% if trackStatusCodes is defined and trackStatusCodes is not empty %}
                                                <td>
                                                    {% if route.getStatusCodes() is not empty %}
                                                        {% set totalResponses = route.getTotalResponses() %}
                                                        {% set statusList = [] %}
                                                        {% for code, count in route.getStatusCodes() %}
                                                            {% set ratio = totalResponses > 0 ? (count / totalResponses) * 100 : 0 %}
                                                            {% set statusList = statusList|merge([{code: code, count: count, ratio: ratio}]) %}
                                                        {% endfor %}
                                                        {% set statusList = statusList|sort((a, b) => b.count <=> a.count) %}
                                                        {% set errorRatio = 0 %}
                                                        {% for item in statusList %}
                                                            {% if item.code >= 400 %}
                                                                {% set errorRatio = errorRatio + item.ratio %}
                                                            {% endif %}
                                                        {% endfor %}
                                                        {% if errorRatio > 10 %}
                                                            <div class="mb-1">
                                                                <span class="badge bg-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ 'routes_table.error_rate'|trans({}, 'nowo_performance') }}: {{ errorRatio|number_format(1) }}%">
                                                                    ⚠️ {{ errorRatio|number_format(1) }}% errors
                                                                </span>
                                                            </div>
                                                        {% endif %}
                                                        <div class="d-flex flex-wrap gap-1">
                                                            {% for item in statusList %}
                                                                {% set badgeClass = 'bg-secondary' %}
                                                                {% if item.code >= 200 and item.code < 300 %}
                                                                    {% set badgeClass = 'bg-success' %}
                                                                {% elseif item.code >= 300 and item.code < 400 %}
                                                                    {% set badgeClass = 'bg-info' %}
                                                                {% elseif item.code >= 400 and item.code < 500 %}
                                                                    {% set badgeClass = 'bg-warning text-dark' %}
                                                                {% elseif item.code >= 500 %}
                                                                    {% set badgeClass = 'bg-danger' %}
                                                                {% endif %}
                                                                <span class="badge {{ badgeClass }}" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ item.count }} / {{ totalResponses }} ({{ item.ratio|number_format(2) }}%)">
                                                                    {{ item.code }}: {{ item.ratio|number_format(1) }}% ({{ item.count }})
                                                                </span>
                                                            {% endfor %}
                                                        </div>
                                                    {% else %}
                                                        <span class="text-muted">N/A</span>
                                                    {% endif %}
                                                </td>
                                            {% endif %}
                                            <td>
                                                <span class="badge bg-primary" title="Number of times this route has been accessed">
                                                    {{ route.getAccessCount()|default(1)|number_format(0) }}
                                                </span>
                                            </td>
                                            <td><span class="badge bg-secondary">{{ route.env ?? 'N/A' }}</span></td>
                                            <td>
                                                {% if route.requestTime is not null %}
                                                    {% set thresholds = thresholds|default({}) %}
                                                    {% set requestTimeWarning = thresholds.request_time.warning|default(0.5) %}
                                                    {% set requestTimeCritical = thresholds.request_time.critical|default(1.0) %}
                                                    <span class="badge {{ route.requestTime > requestTimeCritical ? 'bg-danger' : (route.requestTime > requestTimeWarning ? 'bg-warning' : 'bg-success') }}">
                                                        {{ (route.requestTime * 1000)|number_format(2) }} ms
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if route.queryTime is not null %}
                                                    <span class="badge bg-info">{{ (route.queryTime * 1000)|number_format(2) }} ms</span>
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if route.totalQueries is not null %}
                                                    {% set thresholds = thresholds|default({}) %}
                                                    {% set queryCountWarning = thresholds.query_count.warning|default(20) %}
                                                    {% set queryCountCritical = thresholds.query_count.critical|default(50) %}
                                                    <span class="badge {{ route.totalQueries > queryCountCritical ? 'bg-danger' : (route.totalQueries > queryCountWarning ? 'bg-warning' : 'bg-success') }}">
                                                        {{ route.totalQueries }}
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if route.memoryUsage is not null %}
                                                    {% set thresholds = thresholds|default({}) %}
                                                    {% set memoryUsageWarning = thresholds.memory_usage.warning|default(20.0) %}
                                                    {% set memoryUsageCritical = thresholds.memory_usage.critical|default(50.0) %}
                                                    {% set memoryMB = route.memoryUsage / 1024 / 1024 %}
                                                    <span class="badge {{ memoryMB > memoryUsageCritical ? 'bg-danger' : (memoryMB > memoryUsageWarning ? 'bg-warning' : 'bg-info') }}">
                                                        {{ memoryMB|number_format(2) }} MB
                                                    </span>
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if route.getLastAccessedAt() %}
                                                    {{ route.getLastAccessedAt()|date(dateTimeFormat|default('Y-m-d H:i:s')) }}
                                                {% else %}
                                                    <span class="text-muted">N/A</span>
                                                {% endif %}
                                            </td>
                                            {% if enableReviewSystem %}
                                                <td>
                                                    {% if route.isReviewed() %}
                                                        <span class="badge bg-success">{{ 'routes_table.reviewed'|trans({}, 'nowo_performance') }}</span>
                                                        {% if route.getReviewedAt() %}
                                                            <br><small class="text-muted">{{ route.getReviewedAt()|date(dateFormat|default('Y-m-d H:i')) }}</small>
                                                        {% endif %}
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ 'routes_table.not_reviewed'|trans({}, 'nowo_performance') }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if route.getQueriesImproved() is not null %}
                                                        <span class="badge {{ route.getQueriesImproved() ? 'bg-success' : 'bg-danger' }}">
                                                            {{ route.getQueriesImproved() ? 'routes_table.queries_improved'|trans({}, 'nowo_performance') : 'routes_table.queries_not_improved'|trans({}, 'nowo_performance') }}
                                                        </span>
                                                        {% if route.getTimeImproved() is not null %}<br>{% endif %}
                                                    {% endif %}
                                                    {% if route.getTimeImproved() is not null %}
                                                        <span class="badge {{ route.getTimeImproved() ? 'bg-success' : 'bg-danger' }}">
                                                            {{ route.getTimeImproved() ? 'routes_table.time_improved'|trans({}, 'nowo_performance') : 'routes_table.time_not_improved'|trans({}, 'nowo_performance') }}
                                                        </span>
                                                    {% endif %}
                                                    {% if route.getQueriesImproved() is null and route.getTimeImproved() is null %}
                                                        <span class="text-muted">—</span>
                                                    {% endif %}
                                                </td>
                                            {% endif %}
                                            {% if enableRecordManagement or enableReviewSystem %}
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        {% if enableRecordManagement and (deleteForms|default({}))[route.getId()] is defined %}
                                                            {% set deleteForm = deleteForms[route.getId()] %}
                                                            {{ form_start(deleteForm, {'action': path('nowo_performance.delete', {id: route.getId()}), 'attr': {'style': 'display: inline;', 'onsubmit': "return confirm('" ~ ('routes_table.confirm_delete'|trans({}, 'nowo_performance')) ~ "');"}}) }}
                                                                {{ form_widget(deleteForm._token) }}
                                                                <button type="submit" class="btn btn-sm btn-danger" title="{{ 'routes_table.delete'|trans({}, 'nowo_performance') }}">
                                                                    {{ ux_icon('bi:trash', {style: 'width: 14px; height: 14px;'}) }}
                                                                </button>
                                                            {{ form_end(deleteForm) }}
                                                        {% endif %}
                                                        {% if enableReviewSystem and reviewForms[route.getId()] is defined %}
                                                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#reviewModal{{ route.getId() }}" title="{{ route.isReviewed() ? 'routes_table.edit_review'|trans({}, 'nowo_performance') : 'routes_table.mark_as_reviewed'|trans({}, 'nowo_performance') }}">
                                                                {{ ux_icon(route.isReviewed() ? 'bi:pencil-square' : 'bi:check-circle', {style: 'width: 14px; height: 14px;'}) }}
                                                            </button>
                                                        {% endif %}
                                                    </div>
                                                    {% if enableReviewSystem and reviewForms[route.getId()] is defined %}
                                                        <div class="modal fade" id="reviewModal{{ route.getId() }}" tabindex="-1">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    {% set reviewForm = reviewForms[route.getId()] %}
                                                                    {{ form_start(reviewForm, {'action': path('nowo_performance.review', {id: route.getId()})}) }}
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title">{{ (route.isReviewed() ? 'review.modal_title_edit' : 'review.modal_title')|trans({}, 'nowo_performance') }}</h5>
                                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <div class="mb-3">
                                                                                {{ form_label(reviewForm.queries_improved) }}
                                                                                {{ form_widget(reviewForm.queries_improved) }}
                                                                                {{ form_errors(reviewForm.queries_improved) }}
                                                                            </div>
                                                                            <div class="mb-3">
                                                                                {{ form_label(reviewForm.time_improved) }}
                                                                                {{ form_widget(reviewForm.time_improved) }}
                                                                                {{ form_errors(reviewForm.time_improved) }}
                                                                            </div>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'routes_table.cancel'|trans({}, 'nowo_performance') }}</button>
                                                                            {{ form_widget(reviewForm.submit) }}
                                                                        </div>
                                                                    {{ form_end(reviewForm) }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                </td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% else %}
