{% extends 'base.html.twig' %}

{% block title %}Performance Metrics{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Performance Metrics - {{ environment }}</h1>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Routes</h5>
                    <h2 class="text-primary">{{ stats.total_routes }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Queries</h5>
                    <h2 class="text-info">{{ stats.total_queries }}</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Avg Request Time</h5>
                    <h2 class="text-success">
                        {% if stats.avg_request_time %}
                            {{ (stats.avg_request_time * 1000)|number_format(2) }} ms
                        {% else %}
                            N/A
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Max Request Time</h5>
                    <h2 class="text-warning">
                        {% if stats.max_request_time %}
                            {{ (stats.max_request_time * 1000)|number_format(2) }} ms
                        {% else %}
                            N/A
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h2>Route Performance Details</h2>
        {% if routes is empty %}
            <div class="alert alert-info">
                <p>No performance data collected yet. Navigate through the application to start collecting metrics.</p>
                <p><a href="{{ path('home') }}" class="btn btn-primary">Go to Home</a></p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Route Name</th>
                            <th>Request Time</th>
                            <th>Queries</th>
                            <th>Query Time</th>
                            <th>Params</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for route in routes %}
                            <tr>
                                <td><code>{{ route.name }}</code></td>
                                <td>
                                    {% if route.requestTime %}
                                        <span class="badge {% if route.requestTime < 0.2 %}bg-success{% elseif route.requestTime < 0.5 %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ (route.requestTime * 1000)|number_format(2) }} ms
                                        </span>
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if route.totalQueries %}
                                        <span class="badge {% if route.totalQueries < 10 %}bg-success{% elseif route.totalQueries < 20 %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ route.totalQueries }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if route.queryTime %}
                                        <span class="badge bg-info">
                                            {{ (route.queryTime * 1000)|number_format(2) }} ms
                                        </span>
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if route.params %}
                                        <small class="text-muted">{{ route.params|json_encode }}</small>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <div class="mt-4">
        <a href="{{ path('home') }}" class="btn btn-secondary">Back to Home</a>
        <a href="{{ path('product_index') }}" class="btn btn-primary">View Products</a>
    </div>
</div>
{% endblock %}
