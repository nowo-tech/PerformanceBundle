{% extends 'base.html.twig' %}

{% block title %}Product #{{ product.id }}{% endblock %}

{% block body %}
    <h1>Product #{{ product.id }}</h1>

    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description ?? 'N/A' }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>${{ product.price }}</td>
        </tr>
        <tr>
            <th>Image URL</th>
            <td>{{ product.imageUrl ?? 'N/A' }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td><span class="badge bg-{{ product.status == 'active' ? 'success' : (product.status == 'inactive' ? 'danger' : 'warning') }}">{{ product.status }}</span></td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
        </tr>
    </table>

    <a href="{{ path('product_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
{% endblock %}
